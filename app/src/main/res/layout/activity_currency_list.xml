<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/activity_currency_list_toolbar"
            android:layout_width="match_parent"
            app:title="@string/app_name"
            android:background="@color/colorPrimary"
            app:titleTextColor="@color/white"
            android:layout_height="?attr/actionBarSize"/>


    <FrameLayout
            android:id="@+id/activity_home_layout_main"
            android:layout_width="match_parent"
            android:layout_below="@+id/activity_currency_list_toolbar"
            android:layout_height="match_parent">
        <fragment android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:name="es.jarroyo.revolut.ui.currencyList.fragment.CurrencyListFragment"></fragment>

    </FrameLayout>

</RelativeLayout>
