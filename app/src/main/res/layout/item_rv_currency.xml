<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/item_rv_currency_main_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/general_space"
                android:paddingLeft="@dimen/general_padding"
                android:paddingRight="@dimen/general_padding"
                android:gravity="center_vertical"
                android:background="?attr/selectableItemBackground">

    <ImageView
            android:id="@+id/item_rv_currency_iv_flag"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"/>


    <TextView
            android:id="@+id/item_rv_currency_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_toRightOf="@+id/item_rv_currency_iv_flag"
            android:textColor="@color/gray"
            android:layout_marginLeft="@dimen/general_padding"
            android:textStyle="bold"
            android:textSize="18sp"/>

    <TextView
            android:id="@+id/item_rv_currency_tv_name_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_toRightOf="@+id/item_rv_currency_iv_flag"
            android:textColor="@color/gray"
            android:layout_marginLeft="@dimen/general_padding"
            android:layout_below="@+id/item_rv_currency_tv_name"
            android:textSize="16sp"/>

    <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/item_rv_currency_et_amount"
            android:layout_width="wrap_content"
            android:minWidth="50dp"
            android:inputType="numberDecimal"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:gravity="right"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>


</RelativeLayout>
